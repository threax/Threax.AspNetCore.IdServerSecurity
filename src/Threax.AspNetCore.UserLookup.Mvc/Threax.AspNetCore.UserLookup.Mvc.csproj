<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.0;netstandard2.0</TargetFrameworks>
    <Version>2.1.0-pre01</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1701;1702;1705;1509;1591</NoWarn>
    <PackageReleaseNotes>Version 2.0.0 updates to AutoMapper version 9.0.0 and changes how profiles are added. No other changes made.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.0'">
    <PackageReference Include="Threax.AspNetCore.Halcyon.Ext" Version="12.8.0-pre01" />
    <PackageReference Include="Threax.AspNetCore.UserBuilder.Entities" Version="4.1.0-pre01" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Threax.AspNetCore.Halcyon.Ext" Version="12.0.0" />
    <PackageReference Include="Threax.AspNetCore.UserBuilder.Entities" Version="4.0.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Threax.AspNetCore.Models" Version="6.0.1" />
    <PackageReference Include="Threax.AspNetCore.UserBuilder" Version="3.2.0" />
    <PackageReference Include="AutoMapper" Version="9.0.0" />
    <PackageReference Include="Threax.AspNetCore.ExceptionFilter" Version="5.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Threax.AspNetCore.UserLookup\Threax.AspNetCore.UserLookup.csproj" />
  </ItemGroup>

</Project>
